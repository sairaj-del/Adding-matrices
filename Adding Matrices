public class MatrixAdditionExample
{  
public static void main(String args[])
     { 
    
int a[][]={{1,4,8},{4,5,8},{3,8,9}};    
int b[][]={{1,6,3},{2,5,9},{1,2,1}};    
    
    
int c[][]=new int[3][3];   
    
    
for(int i=0;i<3;i++)
  {       
     for(int j=0;j<3;j++)
{    
        c[i][j]=a[i][j]+b[i][j];      
        System.out.print(c[i][j]+" ");    
}    
        System.out.println();    
   }    
    }
}  
